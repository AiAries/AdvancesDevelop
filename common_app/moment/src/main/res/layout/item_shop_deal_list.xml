<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_margin="@dimen/vl_px_32"
app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="7dp">

        <TextView
            android:id="@+id/textView"
            style="@style/TextStyle.Black.Size32"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginRight="@dimen/vl_px_30"
            android:text="门店名称"
            app:layout_constraintEnd_toStartOf="@+id/shop_name"
            app:layout_constraintTop_toTopOf="@+id/shop_name" />

        <TextView
            android:id="@+id/shop_name"
            style="@style/TextStyle.Gray3.Size32.BoxBorder"
            android:layout_width="@dimen/vl_px_520"
            android:layout_height="@dimen/vl_px_60"
            android:layout_gravity="center_vertical"
            app:layout_constraintStart_toStartOf="@+id/shop_province"
            app:layout_constraintTop_toBottomOf="@+id/shop_city"
            tools:text="火锅店打发斯蒂芬" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        style="@style/camera_viewgroup"
        android:layout_marginTop="@dimen/vl_px_32"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@+id/linearLayout4"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <ImageView
            android:id="@+id/shop_iv_mentou"
            style="@style/camera_imageview" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        style="@style/camera_viewgroup"
        android:layout_marginLeft="@dimen/vl_px_60"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout3"
        app:layout_constraintStart_toEndOf="@+id/linearLayout3"
        app:layout_constraintTop_toTopOf="@+id/linearLayout3">

        <ImageView
            android:id="@+id/shop_iv_neijing"
            style="@style/camera_imageview" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_company_camera_certigier_front4"
        style="@style/TextStyle.Black.Size32"
        android:layout_width="@dimen/vl_px_128"
        android:layout_height="@dimen/vl_px_46"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="门头照片"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintStart_toStartOf="@+id/linearLayout3"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <TextView
        android:id="@+id/tv_company_camera_certigier_front3"
        style="@style/TextStyle.Black.Size32"
        android:layout_width="@dimen/vl_px_128"
        android:layout_height="@dimen/vl_px_46"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="内景照片"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />


</android.support.constraint.ConstraintLayout>