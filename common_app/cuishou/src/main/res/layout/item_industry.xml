<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/vl_px_20"
    android:layout_marginRight="@dimen/vl_px_190"
    android:gravity="center_vertical|right"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/companyinfos_15_stv0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toLeftOf="@+id/ee"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        android:hint="0"
        android:text="*"
        android:textColor="#f00"
        android:textSize="@dimen/vl_px_32" />
    <TextView
        style="@style/TextStyle.Black.Size32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="行业:" />

    <LinearLayout
        android:layout_width="@dimen/vl_px_1282"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/vl_px_22"

        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/companyinfos_15_tv0"
            style="@style/TextStyle.Gray3.Size32.BoxBorder.DownPic"
            android:layout_width="@dimen/vl_px_450"
            android:layout_height="@dimen/vl_px_60"
            android:hint="请选择" />


        <TextView
            android:id="@+id/companyinfos_15_stv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toLeftOf="@+id/ee"
            android:gravity="center_vertical|right"
            android:hint="0"
            android:layout_weight="1"
            android:text="*"
            android:textColor="#f00"
            android:textSize="@dimen/vl_px_32" />
        <TextView
            style="@style/TextStyle.Black.Size32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="子行业:" />
        <TextView
            android:id="@+id/companyinfos_15_tv1"
            style="@style/TextStyle.Gray3.Size32.BoxBorder.DownPic"
            android:layout_width="@dimen/vl_px_450"
            android:layout_height="@dimen/vl_px_60"
            android:layout_marginLeft="@dimen/vl_px_22"
            android:hint="请选择" />



    </LinearLayout>
</LinearLayout>
