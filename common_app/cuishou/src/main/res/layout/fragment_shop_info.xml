<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/white"

    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout
            android:layout_marginBottom="@dimen/vl_px_70"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            tools:layout_editor_absoluteY="81dp">


            <TextView
                android:id="@+id/shop_name_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="0"
                android:text="*"
                android:textColor="#f00"
                android:textSize="@dimen/vl_px_32"
                app:layout_constraintEnd_toStartOf="@+id/textView"
                app:layout_constraintTop_toTopOf="@+id/textView" />

            <TextView
                android:id="@+id/mentou_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="0"
                android:text="*"
                android:textColor="#f00"
                android:textSize="@dimen/vl_px_32"
                app:layout_constraintEnd_toStartOf="@+id/tv_company_camera_certigier_front4"
                app:layout_constraintTop_toTopOf="@+id/tv_company_camera_certigier_front4" />

            <TextView
                android:id="@+id/neijing_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="0"
                android:text="*"
                android:textColor="#f00"
                android:textSize="@dimen/vl_px_32"
                app:layout_constraintEnd_toStartOf="@+id/tv_company_camera_certigier_front3"
                app:layout_constraintTop_toTopOf="@+id/tv_company_camera_certigier_front3" />

            <TextView
                android:id="@+id/yingye_addr_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="0"
                android:text="*"
                android:textColor="#f00"
                android:textSize="@dimen/vl_px_32"
                app:layout_constraintEnd_toStartOf="@+id/textView2"
                app:layout_constraintTop_toTopOf="@+id/textView2" />

            <TextView
                android:id="@+id/xiangxi_addr_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="0"
                android:text="*"
                android:textColor="#f00"
                android:textSize="@dimen/vl_px_32"
                app:layout_constraintEnd_toStartOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="@+id/textView3" />

            <TextView
                android:id="@+id/mendian2_3_stv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="0"
                android:text="*"
                android:textColor="#f00"
                android:textSize="@dimen/vl_px_32"
                app:layout_constraintBottom_toBottomOf="@+id/textView10"
                app:layout_constraintEnd_toStartOf="@+id/textView10"
                app:layout_constraintTop_toTopOf="@+id/textView10" />

            <TextView
                android:id="@+id/jingwei_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="0"
                android:text="*"
                android:textColor="#f00"
                android:textSize="@dimen/vl_px_32"
                app:layout_constraintEnd_toStartOf="@+id/textView4"
                app:layout_constraintTop_toTopOf="@+id/textView4" />

            <TextView
                android:id="@+id/textView"
                style="@style/TextStyle.Black.Size32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginRight="@dimen/vl_px_30"
                android:text="门店名称"
                app:layout_constraintEnd_toStartOf="@+id/shop_name"
                app:layout_constraintTop_toTopOf="@+id/shop_name" />

            <TextView
                android:id="@+id/textView2"
                style="@style/TextStyle.Black.Size32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="营业地址"
                app:layout_constraintBottom_toBottomOf="@+id/shop_province"
                app:layout_constraintEnd_toEndOf="@+id/textView"
                app:layout_constraintTop_toTopOf="@+id/shop_province" />

            <TextView
                android:id="@+id/textView3"
                style="@style/TextStyle.Black.Size32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="详细地址"
                app:layout_constraintBottom_toBottomOf="@+id/shop_detail_address"
                app:layout_constraintEnd_toEndOf="@+id/textView2"
                app:layout_constraintTop_toTopOf="@+id/shop_detail_address" />

            <TextView
                android:id="@+id/textView4"
                style="@style/TextStyle.Black.Size32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="经纬度"
                app:layout_constraintBottom_toBottomOf="@+id/shop_jingdu"
                app:layout_constraintEnd_toEndOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="@+id/shop_jingdu" />

            <TextView
                android:id="@+id/textView10"
                style="@style/TextStyle.Black.Size32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="商圈"
                app:layout_constraintBottom_toBottomOf="@+id/mendian2_3_tv1"
                app:layout_constraintEnd_toEndOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="@+id/mendian2_3_tv1" />

            <TextView
                android:id="@+id/shop_name"
                android:singleLine="false"
                style="@style/TextStyle.Gray3.Size32.BoxBorder"
                android:layout_width="@dimen/vl_px_1198"
                android:layout_height="@dimen/vl_px_110"
                android:layout_marginLeft="@dimen/vl_px_438"
                android:layout_marginTop="@dimen/vl_px_70"
                android:gravity="top"
                android:hint="请输入"
                android:paddingLeft="@dimen/vl_px_20"
                android:paddingTop="@dimen/vl_px_16"
                android:paddingRight="@dimen/vl_px_92"
                android:paddingBottom="@dimen/vl_px_12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="117dp"
                tools:layout_editor_absoluteY="19dp" />

            <TextView
                android:id="@+id/shop_detail_address"
                style="@style/TextStyle.Gray3.Size32.BoxBorder"
                android:layout_width="@dimen/vl_px_1028"
                android:layout_height="@dimen/vl_px_60"
                android:layout_marginTop="@dimen/vl_px_20"
                android:hint="请输入详细地址"
                app:layout_constraintStart_toStartOf="@+id/shop_province"
                app:layout_constraintTop_toBottomOf="@+id/shop_city"
                tools:text="上海市浦东新区" />

            <TextView
                android:id="@+id/mendian2_3_tv1"
                style="@style/TextStyle.Gray3.Size32.BoxBorder"
                android:layout_width="@dimen/vl_px_1028"
                android:layout_height="@dimen/vl_px_60"
                android:layout_marginTop="@dimen/vl_px_20"
                android:hint="请输入详细地址"
                app:layout_constraintStart_toStartOf="@+id/shop_province"
                app:layout_constraintTop_toBottomOf="@+id/shop_detail_address"
                tools:text="请输入商圈" />

            <TextView
                android:id="@+id/shop_jingdu"
                style="@style/TextStyle.Gray3.Size32.BoxBorder"
                android:layout_width="@dimen/vl_px_480"
                android:layout_height="@dimen/vl_px_60"
                android:layout_marginTop="@dimen/vl_px_20"
                android:hint=""
                app:layout_constraintStart_toStartOf="@+id/shop_detail_address"
                app:layout_constraintTop_toBottomOf="@+id/mendian2_3_tv1" />

            <TextView
                android:id="@+id/shop_weidu"
                style="@style/TextStyle.Gray3.Size32.BoxBorder"
                android:layout_width="@dimen/vl_px_480"
                android:layout_height="@dimen/vl_px_60"
                android:layout_marginStart="@dimen/vl_px_68"
                android:hint=""
                app:layout_constraintStart_toEndOf="@+id/shop_jingdu"
                app:layout_constraintTop_toTopOf="@+id/shop_jingdu" />

            <Button
                android:id="@+id/shop_address_levono"
                style="@style/ButtonStyleBk32"
                android:layout_width="@dimen/vl_px_246"
                android:layout_height="@dimen/vl_px_60"
                android:layout_marginStart="@dimen/vl_px_32"
                android:layout_marginLeft="@dimen/vl_px_32"
                android:gravity="center"
                android:text="地址联想"
                app:layout_constraintBottom_toBottomOf="@+id/shop_area"
                app:layout_constraintStart_toEndOf="@+id/shop_area"
                app:layout_constraintTop_toTopOf="@+id/shop_area" />

            <Button
                android:id="@+id/shop_location"
                style="@style/ButtonStyleBk32"
                android:layout_width="@dimen/vl_px_128"
                android:layout_height="@dimen/vl_px_60"
                android:gravity="center"
                android:text="定位"
                app:layout_constraintBottom_toBottomOf="@+id/shop_weidu"
                app:layout_constraintEnd_toEndOf="@+id/shop_name"
                app:layout_constraintStart_toEndOf="@+id/shop_weidu"
                app:layout_constraintTop_toTopOf="@+id/shop_weidu" />

            <TextView
                android:id="@+id/shop_province"
                style="@style/TextStyle.Gray3.Size32.BoxBorder.DownPic"
                android:layout_width="@dimen/vl_px_300"
                android:layout_height="@dimen/vl_px_60"
                android:layout_marginTop="@dimen/vl_px_32"
                android:hint="省份"
                app:layout_constraintStart_toStartOf="@+id/shop_name"
                app:layout_constraintTop_toBottomOf="@+id/shop_name" />

            <TextView
                android:id="@+id/shop_city"
                style="@style/TextStyle.Gray3.Size32.BoxBorder.DownPic"
                android:layout_width="@dimen/vl_px_300"
                android:layout_height="@dimen/vl_px_60"
                android:layout_marginLeft="@dimen/vl_px_64"
                android:hint="城市"
                app:layout_constraintStart_toEndOf="@+id/shop_province"
                app:layout_constraintTop_toTopOf="@+id/shop_province" />

            <TextView
                android:id="@+id/shop_area"
                style="@style/TextStyle.Gray3.Size32.BoxBorder.DownPic"
                android:layout_width="@dimen/vl_px_300"
                android:layout_height="@dimen/vl_px_60"
                android:layout_marginLeft="@dimen/vl_px_64"
                android:hint="区"
                app:layout_constraintStart_toEndOf="@+id/shop_city"
                app:layout_constraintTop_toTopOf="@+id/shop_city" />


            <LinearLayout
                android:visibility="invisible"
                android:id="@+id/ll_company_camera_certigier_front"
                style="@style/camera_viewgroup"
                android:layout_marginTop="@dimen/vl_px_50"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="@+id/shop_location"
                app:layout_constraintTop_toBottomOf="@+id/shop_location">

                <ImageView
                    android:id="@+id/shop_iv_liebiao"
                    style="@style/camera_imageview" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                style="@style/camera_viewgroup"
                android:layout_marginRight="@dimen/vl_px_156"
                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
                app:layout_constraintTop_toTopOf="@+id/linearLayout2">

                <ImageView
                    android:id="@+id/shop_iv_mentou"
                    style="@style/camera_imageview" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                style="@style/camera_viewgroup"
                android:layout_marginRight="@dimen/vl_px_156"
                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="@+id/linearLayout"
                app:layout_constraintTop_toTopOf="@+id/linearLayout">

                <ImageView
                    android:id="@+id/shop_iv_neijing"
                    style="@style/camera_imageview" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                style="@style/camera_viewgroup"
                android:layout_marginRight="@dimen/vl_px_156"
                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="@+id/ll_company_camera_certigier_front"
                app:layout_constraintTop_toTopOf="@+id/ll_company_camera_certigier_front">

                <ImageView
                    android:id="@+id/shop_iv_xiangqing"
                    style="@style/camera_imageview" />

            </LinearLayout>


            <TextView
                android:visibility="invisible"
                android:id="@+id/tv_company_camera_certigier_front"
                style="@style/TextStyle.Black.Size32"
                android:layout_width="@dimen/vl_px_196"
                android:layout_height="@dimen/vl_px_46"
                android:layout_marginTop="@dimen/vl_px_20"
                android:gravity="center"
                android:text="门店列表图片"
                app:layout_constraintEnd_toEndOf="@+id/ll_company_camera_certigier_front"
                app:layout_constraintStart_toStartOf="@+id/ll_company_camera_certigier_front"
                app:layout_constraintTop_toBottomOf="@+id/ll_company_camera_certigier_front" />

            <TextView
                android:id="@+id/tv_company_camera_certigier_front2"
                style="@style/TextStyle.Black.Size32"
                android:layout_width="@dimen/vl_px_196"
                android:layout_height="@dimen/vl_px_46"
                android:gravity="center"
                android:text="其他照片"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout"
                app:layout_constraintStart_toStartOf="@+id/linearLayout"
                app:layout_constraintTop_toTopOf="@+id/tv_company_camera_certigier_front" />

            <TextView
                android:id="@+id/tv_company_camera_certigier_front3"
                style="@style/TextStyle.Black.Size32"
                android:layout_width="@dimen/vl_px_128"
                android:layout_height="@dimen/vl_px_46"
                android:gravity="center"
                android:text="内景照片"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
                app:layout_constraintStart_toStartOf="@+id/linearLayout2"
                app:layout_constraintTop_toTopOf="@+id/tv_company_camera_certigier_front2" />

            <TextView
                android:id="@+id/tv_company_camera_certigier_front4"
                style="@style/TextStyle.Black.Size32"
                android:layout_width="@dimen/vl_px_128"
                android:layout_height="@dimen/vl_px_46"
                android:gravity="center"
                android:text="门头照片"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
                app:layout_constraintStart_toStartOf="@+id/linearLayout3"
                app:layout_constraintTop_toTopOf="@+id/tv_company_camera_certigier_front3" />

            <Button
                android:id="@+id/shop_save"
                style="@style/ButtonStyleWt40"
                android:layout_width="@dimen/vl_px_270"
                android:layout_height="@dimen/vl_px_74"
                android:layout_marginRight="@dimen/vl_px_196"
                android:text="@string/btn_save"
                app:layout_constraintEnd_toStartOf="@+id/shop_next"
                app:layout_constraintTop_toTopOf="@+id/shop_next" />

            <Button
                style="@style/ButtonStyleWt40"
                android:layout_width="@dimen/vl_px_270"
                android:layout_height="@dimen/vl_px_74"
                android:layout_marginLeft="@dimen/vl_px_360"
                android:layout_marginRight="@dimen/vl_px_196"
                android:text="@string/btn_pre"
                android:id="@+id/shop_pre"
                app:layout_constraintEnd_toStartOf="@+id/shop_save"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/shop_save" />

            <Button
                android:id="@+id/shop_next"
                style="@style/ButtonStyleWt40"
                android:layout_width="@dimen/vl_px_270"
                android:layout_height="@dimen/vl_px_74"
                app:layout_constraintRight_toRightOf="parent"
                android:text="@string/btn_next"
                android:layout_marginRight="@dimen/vl_px_360"
                android:layout_marginTop="@dimen/vl_px_134"
                app:layout_constraintTop_toBottomOf="@+id/tv_company_camera_certigier_front" />

        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>