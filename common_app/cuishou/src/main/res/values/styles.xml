<resources xmlns:tools="http://schemas.android.com/tools">

    <declare-styleable name="ListenEditText">
        <attr name="star_id" format="reference"></attr>
        <attr name="tip_content" format="string"></attr>
        <attr name="tip_content_regx" format="string"></attr>
        <attr name="content_maxlen" format="integer"></attr>
    </declare-styleable>
    <!-- Base application theme. -->
    <style name="AppCompatTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <style name="TextStyle">
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="tipDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/dialog_shadow_75</item>
    </style>

    <style name="TextStyle.Black"  >
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextStyle.Gray9"  >
        <item name="android:textColor">@color/gray9</item>
    </style>
    <style name="TextStyle.Gray3"  >
        <item name="android:textColor">@color/gray3</item>
    </style>
    <style name="TextStyle.White" >
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextStyle.DarkBlue" >
        <item name="android:textColor">@color/dark_blue</item>
    </style>
    <style name="TextStyle.LightBlue" >
        <item name="android:textColor">@color/light_blue</item>
    </style>
    <style name="TextStyle.RedStar" >
        <item name="android:textColor">@color/star_color</item>
    </style>

    <!--40-->
    <style name="TextStyle.White.Size40">
        <item name="android:textSize">@dimen/vl_px_40</item>
    </style>

    <!--40-->

    <!--38-->
    <style name="TextStyle.Black.Size38"  >
        <item name="android:textSize">@dimen/vl_px_38</item>
    </style>

    <style name="TextStyle.White.Size38"  >
        <item name="android:textSize">@dimen/vl_px_38</item>
    </style>
    <!--38-->

    <!--36-->
    <style name="TextStyle.Black.Size36"  >
        <item name="android:textSize">@dimen/vl_px_36</item>
    </style>
    <style name="TextStyle.DarkBlue.Size36"  >
        <item name="android:textSize">@dimen/vl_px_36</item>
    </style>

    <style name="TextStyle.Gray9.Size36"  >
        <item name="android:textSize">@dimen/vl_px_36</item>
    </style>
    <style name="TextStyle.RedStar.Size36"  >
        <item name="android:textSize">@dimen/vl_px_36</item>
    </style>
    <!--36-->

    <!--32-->
    <style name="TextStyle.RedStar.Size32"  >
        <item name="android:textSize">@dimen/vl_px_32</item>
    </style>
    <style name="TextStyle.Black.Size32"  >
        <item name="android:textSize">@dimen/vl_px_32</item>
    </style>

    <style name="TextStyle.Gray9.Size32"  >
        <item name="android:textSize">@dimen/vl_px_32</item>
    </style>
    <style name="TextStyle.Gray3.Size32"  >
        <item name="android:textSize">@dimen/vl_px_32</item>
    </style>
    <style name="TextStyle.Gray3.Size32.BoxBorder"  >
        <item name="android:background">@drawable/textview_border_dark_gray</item>
        <item name="android:paddingLeft">@dimen/vl_px_20</item>
        <item name="android:paddingRight">@dimen/vl_px_20</item>
        <item name="android:textColorHint">@color/gray9</item>
        <item name="android:hint">请输入</item>
    </style>
    <style name="TextStyle.Gray9.Size32.BoxBorder"  >
        <item name="android:background">@drawable/textview_border_dark_gray</item>
    </style>
    <style name="TextStyle.Gray3.Size32.ButtonGrayBorder"  >
        <item name="android:background">@drawable/textview_border_dark_gray_btn</item>
    </style>
    <style name="TextStyle.Gray3.Size32.BoxBorder.DownPic"  >
        <item name="android:drawableRight">@mipmap/down</item>
        <item name="android:hint">请选择</item>
    </style>
    <style name="TextStyle.Gray9.Size32.BoxBorder.DownPic"  >
        <item name="android:drawableRight">@mipmap/down</item>
        <item name="android:paddingRight">@dimen/vl_px_20</item>
        <item name="android:hint">请选择</item>
    </style>
    <!--32-->

    <!--30-->
    <style name="TextStyle.Gray3.Size30"  >
        <item name="android:textSize">@dimen/vl_px_30</item>
    </style>
    <style name="TextStyle.Gray3.Size30.P22P30"  >
        <item name="android:textSize">@dimen/vl_px_30</item>
        <item name="android:paddingLeft">@dimen/vl_px_22</item>
        <item name="android:paddingRight">@dimen/vl_px_22</item>
        <item name="android:paddingTop">@dimen/vl_px_30</item>
    </style>
    <style name="TextStyle.Gray3.Size30.Center"  >
        <item name="android:gravity">center</item>
    </style>
    <style name="TextStyle.Gray3.Size30.Center.BGBlue"  >
        <item name="android:background">@color/color_list_title</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--30-->

    <!--28-->
    <style name="TextStyle.Gray3.Size28"  >
        <item name="android:textSize">@dimen/vl_px_28</item>
    </style>
    <style name="TextStyle.Black.Size28"  >
        <item name="android:textSize">@dimen/vl_px_28</item>
    </style>
    <!--28-->

    <!--24-->
    <style name="TextStyle.LightBlue.Size24"  >
        <item name="android:textSize">@dimen/vl_px_24</item>
    </style>
    <!--24-->


    <style name="navItem">
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonStyleWt40" parent="TextStyle.White.Size40">
        <item name="android:gravity">center</item>
        <item name="android:text">上一步</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">@dimen/vl_px_270</item>
        <item name="android:layout_height">@dimen/vl_px_74</item>
        <item name="android:background">@drawable/btn_gradient_blue_corner</item>
        <item name="android:colorEdgeEffect" tools:targetApi="lollipop">@color/light_blue</item>
    </style>
    <style name="ButtonPre" parent="ButtonStyleWt40">
        <item name="android:text">上一步</item>
    </style>
    <style name="ButtonNext" parent="ButtonStyleWt40">
        <item name="android:text">下一步</item>
    </style>
    <style name="ButtonSave" parent="ButtonStyleWt40">
        <item name="android:text">保存</item>
    </style>
    <style name="ButtonSubmit" parent="ButtonStyleWt40">
        <item name="android:text">提交</item>
    </style>

    <style name="ButtonStyleBk32" parent="TextStyle.Black.Size32">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_gradient_gray_corner</item>
    </style>

    <!--拍照 -->
    <style name="camera_viewgroup"  >
        <item name="android:background">@drawable/viewgroup_border_white</item>
        <item name="android:layout_width">@dimen/vl_px_220</item>
        <item name="android:layout_height">@dimen/vl_px_180</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="camera_imageview"  >
        <item name="android:background">@drawable/imgeview_dash_border_white</item>
        <item name="android:src">@mipmap/camera</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_width">@dimen/vl_px_180</item>
        <item name="android:layout_height">@dimen/vl_px_140</item>
    </style>

    <!--dialog theme-->
    <style name="FullScreen" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="FullScreen.Transparent" parent="AppCompatTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>


</resources>
